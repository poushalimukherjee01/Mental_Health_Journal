{
  "manifest_version": 3,
  "name": "MindJournal",
  "version": "1.0",
  "description": "Offline private journaling with optional Gemini Nano analysis",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}


